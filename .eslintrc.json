{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@eslint/js/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-unused-vars": "error",
      "no-console": "warn",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }